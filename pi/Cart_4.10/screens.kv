#:kivy 1.11.1
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import sm __main__.sm
#:import screens __main__.screens
#:import RoundedButton buttons.RoundedButton
#:import titleFont cartfonts.titleFont
#:import labelFont cartfonts.labelFont
#:import LabelInput inputs.LabelInput
#:import ScrollList scrolllist
<DefaultGridLayout>:
    size:(600, 360)

<DefaultScreen>:
    # set default background color as white
    size: (800, 480)
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            size: root.size
            source: 'background.jpg'


<MainScreen>:
    # main menu on startup
    DefaultGridLayout:
        spacing: (20, 20)
        size_hint: 0.8, 0.8
        center: self.parent.center
        rows: 2
        RoundedButton:
            font_size:50
            text: '商品导航'
            on_press: self.parent.parent.move_to('Lead')
        RoundedButton:
            font_size:50
            text: '已购商品'
        RoundedButton:
            font_size:50
            text: '每日推荐'
            on_press: self.parent.parent.move_to('Ads')
        RoundedButton:
            font_size:50
            text: '结算支付'
            on_press: self.parent.parent.move_to('Login')
            
<LoginScreen>:
    result: result
    username: username.text
    password: password.text
    Label:
        markup: True
        text: '[color=202020]登录/注册[/color]'
        font_size: 50
        center_x: self.parent.center_x
        center_y: self.parent.height * 0.75
        font_name: titleFont

    LabelInput:
        id: username
        title: '[color=202020]用户名[/color]'
        center_x: self.parent.center_x
        center_y: self.parent.height * 0.58

    LabelInput:
        id: password
        title: '[color=202020]密 码[/color]'
        center_x: self.parent.center_x
        center_y: self.parent.height * 0.48

    GridLayout:
        rows: 1
        size: (280, 45)
        spacing: (15, 0)
        center_x: self.parent.center_x
        center_y: self.parent.height * 0.33
        RoundedButton:
            font_size: 27
            text: '登录'
            on_press: self.parent.parent.login()
        RoundedButton:
            font_size: 27
            text: '注册'
            on_press: self.parent.parent.newuser()
        RoundedButton:
            font_size: 27
            text: '返回'
            on_press: self.parent.parent.back()

    Label:
        id: result
        markup: True
        text: ''
        font_name: titleFont
        font_size: 30
        center_x: self.parent.center_x
        center_y: self.parent.height * 0.18

<MoreInfo>:
    size: (240, 60)
    pic_hint: 0.2
    AsyncImage:
        size_hint_x: root.pic_hint
        source: root.img
    Label:
        font_name: labelFont
        text_size: self.width * 0.8, self.height
        halign: 'left'
        valign: 'middle'
        text: root.text
        size_hint_x: 0.5
    GridLayout:
        size_hint_x: 0.1
        cols: 1
        BubbleButton:
            canvas.after:
                Rectangle:
                    pos: self.x + self.width * 0.2, self.y + self.height * 0.15
                    size: self.width * 0.6, self.height * 0.7
                    source: 'basket.png'
            on_press:
                root.parent.parent.remove_widget(root.parent)
        BubbleButton:
            text: 'X'
            font_size: 19
            bold: True
            on_press:
                root.center_x += 1000

<Point>:
    size: 15, 19.2
    info: bubble
    Button:
        background_color: 0, 0, 0, 0
        size: self.parent.size
        center: self.parent.center_x, self.parent.center_y + self.height * 0.5
        on_press: self.parent.showinfo()
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'pos.png'
    MoreInfo:
        id: bubble
        img: self.parent.img
        text: self.parent.name
        center: self.parent.center_x + 1000, self.parent.center_y + 39.6

<At>:
    size: 15, 15
    canvas:
        PushMatrix
        Rotate:
            angle: root.angle
            origin: root.center
        Color:
            rgba: 1, 0.2, 0.2, root.show_direction
        Rectangle:
            id: direct
            size: 8.5, 8.5
            pos: self.center
        Color:
            rgba: 1, 1, 1, 1
        Ellipse:
            size: 15, 15
            pos: self.pos
        PopMatrix
<LeadScreen>:
    name: name
    at: at
    scroll: scroll
    the_map: the_map
    Label:
        center_x: self.parent.width * 0.3
        center_y: self.parent.height * 0.92
        font_size: 40
        font_name: titleFont
        markup: True
        text: '[color=202020]商品导航[/color]'  
    Image:
        id: the_map
        source: 'map.png'
        size: 420, 380
        center: self.parent.width * 0.3, self.parent.height * 0.47
    At:
        id: at
        center: self.parent.center

    LabelInput:
        id: name
        size: 250, 30
        id: name
        font_size: 25
        title: '[color=202020]商品名 [/color]'
        center: self.parent.width * 0.74, self.parent.height * 0.91

    RoundedButton:
        size: 60, 35
        center_x: self.parent.width * 0.74 + 160
        center_y: self.parent.height * 0.91
        font_size: 23
        text: '搜索'
        on_press: self.parent.search()

    ScrollList:
        id: scroll
        height: 373
        center: self.parent.width * 0.74 + 30, self.parent.height * 0.44

    RoundedButton:
        center_x: self.parent.width * 0.08
        center_y: self.parent.height * 0.92
        size: 60, 40
        font_size: 25
        text: '返回'
        on_press: self.parent.back()

<AdScreen>:
    scroll: scroll
    Label:
        center_x: self.parent.center_x
        center_y: self.parent.height * 0.92
        font_size: 50
        font_name: titleFont
        markup: True
        text: '[color=202020]今日推荐[/color]'

    ScrollList:
        id: scroll
        size: 750, 360
        center: self.parent.center_x, self.parent.height * 0.44
        high: 360

    RoundedButton:
        center_x: self.parent.width * 0.1
        center_y: self.parent.height * 0.92
        size: 80, 50
        font_size: 25
        text: '返回'
        on_press: self.parent.back()

<PayScreen>:
    Label:
        font_name: labelFont
        font_size: 60
        color: 0, 0, 0, 1
        text: '￥15.00 '
        center: self.parent.center_x, self.parent.height * 0.8
    Image:
        size: 300, 300
        source: 'ewm.png'
        center: self.parent.center_x, self.parent.height * 0.4