#:kivy 1.11.1
#:import titleFont cartfonts.titleFont
#:import Label kivy.uix.label
#:import GridLayout kivy.uix.gridlayout

<Infomation>:
	rows: 1
	size_hint: 1,None
	height: 53
	AsyncImage:
		size_hint: 0.3, 1
		source: root.image

	Button:
		mark_up: True
		text: root.text
		on_press: print(self.text)
	
