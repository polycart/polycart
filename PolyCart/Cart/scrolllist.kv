#:kivy 1.11.1
#:import titleFont cartfonts.titleFont
#:import labelFont cartfonts.labelFont
#:import Label kivy.uix.label
#:import GridLayout kivy.uix.gridlayout

<Infomation>:
	rows: 1
	size_hint: 1,None
	height: 53
	AsyncImage:
		size_hint: 0.3, 1
		source: root.image

	Button:
        background_color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgba: (0, 0.4, 0.9, 0.6) if self.state == 'normal' else (0, 0.2, 0.45, 0.6)
            RoundedRectangle:
                pos: self.pos
                
                size: self.size
        text_size: self.width * 0.8, self.height
        halign: 'left'
        valign: 'middle'
        font_size: 19
        font_name: labelFont
		mark_up: True
		text: root.text
        on_press: self.parent.parent.parent.parent.show(self.parent.goodspos, self.parent.image, self.parent.text)

<Advertisement>:
    cols: 1
    size_hint: 1, None
    height: 355
    AsyncImage:
        size_hint: 1, None
        height: root.height
        source: root.image
        canvas:
            Color:
                rgba: (0.3, 0.3, 0.3, 0.7)
            Rectangle:
                pos: self.center_x - (self.height * self.image_ratio) / 2, self.y
                size: self.height * self.image_ratio, 30
        Label:
            font_name: labelFont
            font_size: 20
            text: root.text
            size: 750, 30
            pos: self.parent.center_x - (self.parent.height * self.parent.image_ratio) / 2, self.parent.y
            text_size: self.width * 0.95, self.height
            halign: 'left'
            valign: 'middle'
    
<ScrollList>:
	size: 310, 320
	do_scroll_x: False
    do_scroll_y: True
    layout: layout
    GridLayout
    	cols:1
    	id: layout
    	spacing: 5
    	size_hint_x: 1
        size_hint_y: None
        height: 0